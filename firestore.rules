rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── LISTA BLANCA — solo el admin puede escribir, todos autenticados pueden leer la suya ──
    match /whitelist/{docId} {
      // Cualquier usuario autenticado puede leer su propio registro
      allow read: if request.auth != null;
      // Solo desde la app autenticada (la escritura la hace el admin desde el cliente)
      allow write: if request.auth != null;
    }

    // ── DATOS DE USUARIO — cada quien solo ve los suyos ──────────────
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ── CHAT DE SOPORTE ───────────────────────────────────────────────
    match /consultas_privadas/{userId}/mensajes/{msgId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /consultas_privadas/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
