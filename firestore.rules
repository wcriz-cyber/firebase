rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── CONFIG ADMIN — lectura pública, escritura solo autenticados ───
    // Guarda el UID del super admin para que todos los dispositivos lo lean
    match /config/{doc} {
      allow read: if true;  // cualquiera puede leer (solo tiene el UID público)
      allow write: if request.auth != null;
    }

    // ── DATOS DE USUARIO + SUBCOLLECCIONES ────────────────────────────
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ── CHAT DE SOPORTE ───────────────────────────────────────────────
    match /consultas_privadas/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
