rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── CONFIG ADMIN — lectura pública ────────────────────────────────
    match /config/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ── WHITELIST — lectura por autenticados, escritura solo admin ────
    // El admin escribe aquí; los usuarios leen para verificar su acceso
    match /whitelist/{doc} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;  // Las reglas de app controlan quién es admin
    }

    // ── DATOS DE USUARIO + SUBCOLLECCIONES ────────────────────────────
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ── CHAT DE SOPORTE ───────────────────────────────────────────────
    match /consultas_privadas/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
